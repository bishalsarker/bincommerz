@{
    ViewData["Title"] = "Home Page";
}

<div class="sidenav">
    <div class="login-main-text">
        <h1>bincommerz</h1>
        <p>Retail Admin Portal</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form method="post" asp-controller="account" asp-action="login">
                <div class="form-group">
                    <label>User Name</label>
                    <input type="text" class="form-control" placeholder="User Name" name="username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>

                <div style="display:none">
                    <input type="text" value="@ViewBag.return_uri" name="return_uri">
                    <input type="text" value="@ViewBag.client_id" name="client_id">
                </div>

                <button type="submit" class="btn btn-secondary w-100" style="margin-top: 20px;">Login</button>
                <p style="color:red; margin-top: 15px; font-size: small;">@ViewBag.error</p>
            </form>
        </div>
    </div>
</div>
